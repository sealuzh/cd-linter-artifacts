  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>fudaa-crue</artifactId>
    <groupId>org.fudaa.soft.fudaa-crue</groupId>
    <version>1.4.1-SNAPSHOT</version>
  </parent>
