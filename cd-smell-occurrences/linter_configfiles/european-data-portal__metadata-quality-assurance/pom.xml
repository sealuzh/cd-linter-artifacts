    <groupId>de.fhg.fokus.edp.mqa</groupId>
    <artifactId>mqa-service</artifactId>
    <version>0.1</version>
    <packaging>war</packaging>
    <name>mqa-service</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <resteasy.version>3.5.0.Final</resteasy.version>
        <wildfly.plugin.version>1.0.2.Final</wildfly.plugin.version>
        <slf4j.version>1.7.21</slf4j.version>
        <arquillian.version>1.1.11.Final</arquillian.version>
        <wildfly.server.version>8.2.1.Final</wildfly.server.version>
        <jsf.mojarra.version>2.2.13</jsf.mojarra.version>
        <deltaspike.version>1.7.1</deltaspike.version>
        <rewrite.version>3.4.0.Final</rewrite.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.jboss.arquillian</groupId>
                <artifactId>arquillian-bom</artifactId>
                <version>${arquillian.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>

